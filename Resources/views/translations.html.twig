<script type="text/javascript">
    // <![CDATA[
    var translations = {
        {% for key, value in translations %}
        "{{ key }}" : "{{ key | trans() }}",
        {% endfor %}
        "{{ title }}" : "{{ title | trans() }}"
    };

    /**
     * i18n javascript interface
     *
     * @param phrase
     * @return {*}
     */
    function __(phrase) {
        return typeof translations[phrase] !== "undefined" ? translations[phrase] : phrase;
    }

    // ]]>
</script>